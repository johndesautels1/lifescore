# ============================================================================
# LIFE SCORE Environment Variables
# Copy this file to .env and fill in your values
# ============================================================================

# ----------------------------------------------------------------------------
# SUPABASE (Database & Auth) - FREE TIER AVAILABLE
# https://supabase.com
# ----------------------------------------------------------------------------
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ----------------------------------------------------------------------------
# LLM PROVIDERS (for city comparison evaluation)
# ----------------------------------------------------------------------------

# OpenAI - Used for GPT-4o evaluator and Olivia Assistant
# https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...
OPENAI_ASSISTANT_ID=asst_... # Your Olivia assistant ID

# Anthropic - Used for Claude evaluator and Opus judge
# https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Google AI - Used for Gemini evaluator
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=...

# xAI - Used for Grok evaluator
# https://console.x.ai/
XAI_API_KEY=xai-...
GROK_API_KEY=xai-...                    # Alias for XAI_API_KEY (some code uses this)
# GROK_API_URL=https://api.x.ai/v1     # Optional - defaults to https://api.x.ai/v1

# Perplexity - Used for real-time web search evaluator
# https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-...

# Tavily - Web research API (alternative to Perplexity)
# https://tavily.com/
TAVILY_API_KEY=tvly-...

# ----------------------------------------------------------------------------
# D-ID (Fallback Avatar Video - if Simli unavailable)
# https://studio.d-id.com/account-settings
# ----------------------------------------------------------------------------
DID_API_KEY=...
DID_PRESENTER_URL=https://create-images-results.d-id.com/... # Olivia avatar image
# DID_JUDGE_PRESENTER_URL=...           # Optional - Judge (Cristiano) avatar image
# DID_AGENT_ID=...                      # Optional - D-ID agent ID

# ----------------------------------------------------------------------------
# SIMLI AI (Primary Avatar Video Streaming - 90% cheaper than D-ID)
# https://simli.com - Get API key and create a face/avatar
# ----------------------------------------------------------------------------
# Server-side only (served via /api/simli-config proxy â€” never exposed to client)
SIMLI_API_KEY=simli_xxxxxxxx                # Your Simli API key
SIMLI_FACE_ID=your-face-id-here             # Face ID from Simli dashboard
# DEPRECATED: VITE_SIMLI_API_KEY / VITE_SIMLI_FACE_ID are no longer used.
# Simli credentials are now fetched at runtime from /api/simli-config.

# ----------------------------------------------------------------------------
# ELEVENLABS (TTS for avatars)
# https://elevenlabs.io/
# ----------------------------------------------------------------------------
ELEVENLABS_API_KEY=...
ELEVENLABS_VOICE_ID=...                     # Default voice ID
# ELEVENLABS_OLIVIA_VOICE_ID=...            # Olivia's voice (defaults to ELEVENLABS_VOICE_ID)
# ELEVENLABS_CRISTIANO_VOICE_ID=...        # Judge Cristiano's voice
# ELEVENLABS_EMILIA_VOICE_ID=...            # Emilia help assistant voice

# ----------------------------------------------------------------------------
# GAMMA (Visual Report Generation)
# https://gamma.app/developers
# ----------------------------------------------------------------------------
GAMMA_API_KEY=...
# GAMMA_TEMPLATE_ID=...                     # Optional - custom template ID
# GAMMA_THEME_ID=...                        # Optional - custom theme ID
# GAMMA_FOLDER_ID=...                       # Optional - folder to save reports

# ----------------------------------------------------------------------------
# STRIPE (Payment Processing)
# https://dashboard.stripe.com/apikeys
# ----------------------------------------------------------------------------

# Secret key for server-side API calls (starts with sk_)
STRIPE_SECRET_KEY=sk_test_...

# Webhook secret for verifying webhook signatures (starts with whsec_)
# Get this from Stripe Dashboard > Developers > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs from Stripe Dashboard > Products
# Create products for Navigator ($29/mo, $249/yr) and Sovereign ($99/mo, $899/yr)
# Then copy the price IDs (start with price_)
STRIPE_PRICE_NAVIGATOR_MONTHLY=price_...
STRIPE_PRICE_NAVIGATOR_ANNUAL=price_...
STRIPE_PRICE_SOVEREIGN_MONTHLY=price_...
STRIPE_PRICE_SOVEREIGN_ANNUAL=price_...

# ----------------------------------------------------------------------------
# SUPABASE SERVER (for webhooks - set in Vercel, not locally)
# These are server-side only keys for API routes
# ----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...               # Service role key (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=eyJ...          # Alias for SUPABASE_SERVICE_KEY
SUPABASE_ANON_KEY=eyJ...                  # Anon key for server-side (same as VITE_SUPABASE_ANON_KEY)
# NEXT_PUBLIC_SUPABASE_URL=...            # Next.js compatibility alias
# NEXT_PUBLIC_BASE_URL=...                # Base URL for webhooks (e.g., https://clueslifescore.com)

# ----------------------------------------------------------------------------
# VERCEL (Deployment - set these in Vercel dashboard, not locally)
# ----------------------------------------------------------------------------
# These are auto-set by Vercel:
# VERCEL_URL
# VERCEL_ENV

# ----------------------------------------------------------------------------
# DEVELOPER BYPASS (Grant SOVEREIGN tier to specific emails)
# Comma-separated list of emails for admin/testing access
# ----------------------------------------------------------------------------
DEV_BYPASS_EMAILS=admin@example.com,developer@example.com
# DEPRECATED: VITE_DEV_BYPASS_EMAILS is no longer used.
# Admin check now happens server-side via /api/admin-check.

# ----------------------------------------------------------------------------
# VIDEO GENERATION
# ----------------------------------------------------------------------------
# Replicate - Stable Video Diffusion fallback
# https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_...

# Kling AI - High-quality video generation (alternative)
# https://klingai.com/
KLING_VIDEO_API_KEY=...
KLING_VIDEO_SECRET=...

# ----------------------------------------------------------------------------
# HEYGEN (Avatar Video Generation - premium quality)
# https://heygen.com/
# Used for Olivia Gamma Report Presenter + Cristiano "Go To My New City" videos
# ----------------------------------------------------------------------------
HEYGEN_API_KEY=...
HEYGEN_OLIVIA_AVATAR_ID=...                # Olivia avatar for Gamma report presenter
HEYGEN_OLIVIA_VOICE_ID=...                 # Olivia voice for Gamma report narration
HEYGEN_CRISTIANO_AVATAR_ID=...             # Cristiano avatar for "Go To My New City" Freedom Tour
HEYGEN_CRISTIANO_VOICE_ID=...              # Cristiano voice for Freedom Tour narration
HEYGEN_AVATAR_LOOK_ID=...                  # HeyGen avatar look/appearance ID (physical appearance variant)

# ----------------------------------------------------------------------------
# EMAIL NOTIFICATIONS (Resend)
# https://resend.com/
# ----------------------------------------------------------------------------
RESEND_API_KEY=...
# RESEND_FROM_EMAIL=cluesnomads@gmail.com

# ----------------------------------------------------------------------------
# OPENAI ASSISTANTS (Olivia & Emilia)
# ----------------------------------------------------------------------------
# EMILIA_ASSISTANT_ID=asst_...            # Help widget assistant ID

# ----------------------------------------------------------------------------
# ADDITIONAL AVATAR/VIDEO OPTIONS
# ----------------------------------------------------------------------------
# CRISTIANO_IMAGE_URL=...                # Judge avatar source image
# WEBHOOK_BASE_URL=...                    # Base URL for video webhooks
# VITE_AVATAR_PROVIDER=simli              # Avatar provider: simli, did, heygen

# ----------------------------------------------------------------------------
# OPTIONAL FEATURES
# ----------------------------------------------------------------------------
# USE_CATEGORY_SCORING=true               # Enable category-based scoring
# KV_REST_API_URL=...                     # Vercel KV REST API URL (server-side only)
# KV_REST_API_TOKEN=...                   # Vercel KV REST API token (server-side only)
# DEPRECATED: VITE_KV_REST_API_* are no longer used. KV is proxied via /api/kv-cache.
