{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "functions": {
    "api/evaluate.ts": {
      "maxDuration": 300,
      "includeFiles": "api/shared/**"
    },
    "api/judge.ts": {
      "maxDuration": 300,
      "includeFiles": "api/shared/**"
    },
    "api/health.ts": {
      "maxDuration": 30
    },
    "api/test-llm.ts": {
      "maxDuration": 60
    },
    "api/gamma.ts": {
      "maxDuration": 120,
      "includeFiles": "api/shared/**"
    },
    "api/olivia/chat.ts": {
      "maxDuration": 120
    },
    "api/olivia/tts.ts": {
      "maxDuration": 120
    },
    "api/olivia/context.ts": {
      "maxDuration": 120,
      "includeFiles": "api/shared/**"
    },
    "api/olivia/avatar/streams.ts": {
      "maxDuration": 120
    },
    "api/olivia/avatar/did.ts": {
      "maxDuration": 120
    },
    "api/olivia/avatar/heygen.ts": {
      "maxDuration": 120
    },
    "api/avatar/generate-judge-video.ts": {
      "maxDuration": 120,
      "includeFiles": "api/shared/**"
    },
    "api/avatar/video-status.ts": {
      "maxDuration": 60,
      "includeFiles": "api/shared/**"
    },
    "api/avatar/video-webhook.ts": {
      "maxDuration": 60,
      "includeFiles": "api/shared/**"
    },
    "api/olivia/gun-comparison.ts": {
      "maxDuration": 60,
      "includeFiles": "api/shared/**"
    },
    "api/video/grok-generate.ts": {
      "maxDuration": 240,
      "includeFiles": "api/shared/**"
    },
    "api/video/grok-status.ts": {
      "maxDuration": 60,
      "includeFiles": "api/shared/**"
    },
    "api/warmup.ts": {
      "maxDuration": 30
    },
    "api/movie/generate.ts": {
      "maxDuration": 300,
      "includeFiles": "api/shared/**"
    },
    "api/movie/screenplay.ts": {
      "maxDuration": 300,
      "includeFiles": "api/shared/**"
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/warmup",
      "schedule": "*/5 * * * *"
    }
  ]
}
