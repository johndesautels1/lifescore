{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "functions": {
    "api/evaluate.ts": {
      "maxDuration": 300,
      "includeFiles": "api/shared/**"
    },
    "api/judge.ts": {
      "maxDuration": 300,
      "includeFiles": "api/shared/**"
    },
    "api/health.ts": {
      "maxDuration": 30
    },
    "api/test-llm.ts": {
      "maxDuration": 60
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/og",
      "destination": "/api/og"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
